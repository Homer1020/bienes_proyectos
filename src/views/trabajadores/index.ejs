<%- include('../partials/header') %>
<main class="container">
    <%- include('../partials/messages') %>
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h5 text-uppercase my-3">Todos los Trabajadores</h1>
      <div>
        <a href="/register" class="btn btn-sm btn-primary">Agregar Trabajador</a>
    </div>
    </div>
    <table class="table" id="bienes-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Departamento</th>
                <th>Gerencia</th>
                <th>Cargo</th>
                <th>Solicitudes</th>
            </tr>
        </thead>
        <tbody>
          <% trabajadores.forEach(t => {%>
            <tr>
              <td>#<%= t.id %></td>
              <td><%= `${ t.nombre } ${t.apellido}` %></td>
              <td><%= t.departamento %></td>
              <td><%= t.gerencia %></td>
              <td><%= t.cargo %></td>
              <td>
                <a href="/trabajadores/<%= t.id %>/solicitudes" class="btn btn-info btn-sm">Solicitudes</a>
              </td>
            </tr>
          <%}) %>
        </tbody>
    </table>
</main>
<%- include('../partials/footer') %>
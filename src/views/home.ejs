<%- include('partials/header') %>
<div class="container <%= !user ? 'align-self-center' : '' %>">
  <%- include('./partials/messages') %>
  <% if(!user) { %>
    <div class="row align-items-center justify-content-between">
      <div class="col-md-6">
        <img src="/assets/imgs/secure.svg" alt="Bienes System" class="img-fluid">
      </div>
      <div class="col-md-5">
        <div class="card">
          <div class="card-body">
            <form action="/login" method="post">
              <h2 class="text-uppercase fs-5 text-center mb-5 mt-4">Iniciar Sesion</h2>
              <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                <label for="floatingInput">Email address</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
                <label for="floatingPassword">Password</label>
              </div>
              <input type="submit" value="Iniciar Sesion" class="btn btn-success btn-lg">
            </form>
          </div>
        </div> 
      </div>
    </div>
  <% } else { %>
    <h1 class="h4 mt-3 text-uppercase">Bienvenido a bienes system</h1>
  <% } %>
</div>
<%- include('./partials/footer') %>